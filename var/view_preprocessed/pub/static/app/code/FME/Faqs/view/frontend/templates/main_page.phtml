                                    $('#rating-response').addClass('rate-fail');                                
                                }

                        });
                    }
                }
            });
        });</script><script type="text/x-magento-init">
        {
            "[data-rating-role=rating-placeholder]": {
                "FME_Faqs/js/barrating":
                    {}
            }
        }</script><?php } ?>