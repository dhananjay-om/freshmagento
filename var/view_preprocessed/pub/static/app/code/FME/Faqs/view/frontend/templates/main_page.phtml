<?php /** * Copyright © 2015 Magento. All rights reserved. * See COPYING.txt for license details. */ $topicsCollection = $block->getFrontPageTopics(); $answerLengthAllowed = $block->allowedAnswerLength(); $noq = $block->numberOfQuestionToDisplay(); ?> <div data-rating-role="rating-placeholder"><div id="rating-response"></div><?php foreach($topicsCollection as $topic): ?> <div class="faq_block"><h2><?php echo $topic->getTitle(); ?></h2><ul id="<?php echo 'accordion_element'.$topic->getId(); ?>"><?php $faqsColection = $block->getFrontPageFaqs($topic->getId()); $num = 1; if($faqsColection->count() > 0){ foreach ($faqsColection as $faq){ if($noq != '') if($num <= $noq){ ?> <li> <div class="accordion-toggle" data-role="trigger"><?php echo $faq->getTitle(); ?></div><div class="accordion-content" data-role="content"><p><?php $answer = $faq->getFaqAnswer(); if($answerLengthAllowed == 0 || (strlen($answer) <= $answerLengthAllowed)): echo $answer; else: echo substr($answer, 0, $answerLengthAllowed).' <a title="'._("View Detail").'" href="'.$block->getFaqUrl($faq).'">...</a>'; endif; ?></p><?php if($block->isRatingEnable() ){ ?> <div class="br-theme-css-stars"><select id="<?php echo $faq->getId(); ?>" data-stars-role="<?php echo (int) $faq->getRatingStars(); ?>" data-customer-rate-readonly="<?php echo $block->isCustomerReadonlyStars($faq->getId())?>"><option value="1">1</option><option value="2">2</option><option value="3">3</option><option value="4">4</option><option value="5">5</option></select></div><?php } ?></div></li> <?php $num++; } } }else{ echo __('There are no faqs for this topic.'); } ?></ul><?php if($faqsColection->count() > $noq && $block->isViewMoreLinkEnable()){ echo __('<div class="read_more"><a href="'.$block->getTopicUrl($topic->getId()).'"><span>–</span>Read more<span>–</span></a></div>'); } ?></div><?php endforeach; ?></div><?php if($block->isAccordionEnable()){ ?> <script>
        require([
            'jquery',
            'tabs'], function ($) {
