<?xml version="1.0"?> 
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../lib/internal/Magento/Framework/Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="OM_Press::system_config" title="Press" />
                        </resource>
                    </resource>
                </resource>
				<resource id="OM_Press::press" title="Press" sortOrder="100">
                    <resource id="OM_Press::add_press" title="Add press" sortOrder="1" />
                    <resource id="OM_Press::manage_press" title="Manage press"  sortOrder="2" />
                    <resource id="OM_Press::configuration" title="Configurations"  sortOrder="3" />
                </resource>               
            </resource>
        </resources>
    </acl>	   	
</config>