<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">                
                <resource id="FME_Extensions::fmeextensions" title="FME Extensions">
                        <resource id="FME_Faqs::faqs_main" title="Faqs" sortOrder="30">
                            <resource id="FME_Faqs::topic" title="Manage Topics" sortOrder="10" />
                            <resource id="FME_Faqs::faqs" title="Manage Faqs" sortOrder="20" />
                            <resource id="FME_Faqs::importexport" title="Manage Import/Export" sortOrder="30" />
                        </resource>
                </resource>                
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">                            
                                <resource id="FME_Faqs::faqs_config" title="Faqs Section" />                            
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
